/**index.wxss**/
/* 整个页面样式 */
page {
  background-color: #F0F0F0;
}

swiper {
  height: 320rpx;
}

swiper image {
  width: 750rpx;
  height: 320rpx;
}

.zooactivity {}

.zooactivity .title {
  padding: 20rpx 0 20rpx 30rpx;
  font: bold 28rpx FZLTCHJW--GB1-0;
  color: #3C3C3C;
  letter-spacing: 0.02rpx;
}

.zooactivity .content {
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
}

.zooactivity .content navigator {
  width: 750rpx;
  height: 320rpx;
}

.zooactivity .content image {
  width: 100%;
  height: 100%;
}

.zooactivity .content .content-title {
  position: relative;
  width: 590rpx;
  height: 86rpx;
  font: 30rpx/42rpx FZLTHJW--GB1-0;
  color: #3C3C3C;
  letter-spacing: 0.42rpx;
  margin-top: 8rpx;
  margin-left: 30rpx;
}

.zooactivity .content .content-info {
  margin-top: 26rpx;
  margin-left: 30rpx;
  padding-bottom: 20rpx;
  font-size: 22rpx;
  color: #B4B4B4;
  letter-spacing: 0.1rpx;
}

.zooactivity .content .free {
  font-family: STHeitiSC-Light;
  font-size: 32rpx;
  color: #FE6249;
  letter-spacing: 0.16rpx;
  position: absolute;
  top: 0;
  right: -100rpx;
}